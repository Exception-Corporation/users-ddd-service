{
  "name": "crud-json",
  "version": "1.0.0",
  "description": "CRUD NodeJS with TyeORM(Postgresql) using clean architecture and DDD (Domain driven design)",
  "main": "index.js",
  "author": "Edgar Castillo Vega",
  "license": "ISC",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon -r tsconfig-paths/register src/index.ts --exec ts-node",
    "prod": "yarn build && node -r ts-node/register/transpile-only -r tsconfig-paths/register build/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "containers:up": "docker-compose up -d",
    "containers:down": "docker-compose down",
    "typeorm": "ts-node -r tsconfig-paths/register $(yarn bin typeorm) -d src/shared/infrastructure/database/postgresql/postgres.database.ts",
    "db:migrate": "yarn typeorm migration:run",
    "db:migrate:revert": "yarn typeorm migration:revert",
    "db:migration:generate": "yarn typeorm migration:generate"
  },
  "keywords": [
    "typescript",
    "clean",
    "architecture",
    "DDD",
    "TDD",
    "redis",
    "typeorm",
    "postgres"
  ],
  "dependencies": {
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "express": "^4.17.2",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.4.0",
    "redis": "^4.3.1",
    "reflect-metadata": "^0.1.13",
    "require-context": "^1.1.0",
    "tsconfig-paths": "^4.1.0",
    "typeorm": "0.3.10",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^16.11.10",
    "@types/redis": "^4.0.11",
    "@types/uuid": "^8.3.4",
    "nodemon": "^2.0.20",
    "ts-node": "10.7.0",
    "typescript": "4.5.2"
  }
}
