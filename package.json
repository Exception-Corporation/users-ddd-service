{
  "name": "crud-json",
  "version": "1.0.0",
  "description": "CRUD NodeJS with TyeORM(Postgresql) using clean architecture and DDD (Domain driven design)",
  "main": "index.js",
  "author": "Edgar Castillo Vega",
  "license": "ISC",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon -r tsconfig-paths/register src/index.ts --exec ts-node",
    "start": "yarn build && node -r ts-node/register/transpile-only -r tsconfig-paths/register build/index.js",
    "test": "NODE_TEST=unit jest --setupFiles dotenv/config --runInBand --logHeapUsage --detectOpenHandles",
    "containers:up": "docker-compose up -d --build",
    "containers:down": "docker-compose down",
    "typeorm": "ts-node -r tsconfig-paths/register $(yarn bin typeorm) -d src/shared/infrastructure/database/postgresql/postgres.database.ts",
    "db:migrate": "yarn --silent typeorm migration:run",
    "db:migrate:revert": "yarn typeorm migration:revert",
    "db:migration:generate": "yarn --silent typeorm migration:generate",
    "start:prod": "pm2 start ecosystem.yml",
    "prepare": "husky install",
    "create:user": "ts-node -r tsconfig-paths/register scripts/create-admin-user.ts",
    "build:prod": "docker build -f Dockerfile -t edgarcv99/users-api .",
    "publisher": "docker login && docker push edgarcv99/users-api"
  },
  "keywords": [
    "typescript",
    "clean",
    "architecture",
    "DDD",
    "TDD",
    "redis",
    "typeorm",
    "postgres"
  ],
  "dependencies": {
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "express": "^4.17.2",
    "glob": "^8.0.3",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.8.0",
    "pg": "^8.4.0",
    "pm2": "^5.2.2",
    "redis": "^4.3.1",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^4.1.0",
    "typeorm": "0.3.10",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.1.2",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^16.11.10",
    "@types/nodemailer": "^6.4.6",
    "@types/redis": "^4.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-webpack-plugin": "^3.2.0",
    "husky": "^8.0.1",
    "jest": "^29.2.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "10.7.0",
    "typescript": "4.5.2"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setupTests.ts"
    ],
    "rootDir": "./",
    "testEnvironment": "node",
    "testRegex": "\\.spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/src/index.ts",
      "<rootDir>/node_modules"
    ],
    "maxWorkers": 1,
    "testTimeout": 30000
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "endOfLine": "auto"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "jest": true,
      "browser": true,
      "commonjs": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "warnOnUnsupportedTypeScriptVersion": false
    },
    "extends": [
      "prettier",
      "eslint:recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "warn",
      "no-var": "warn",
      "no-unused-vars": "off"
    }
  }
}
