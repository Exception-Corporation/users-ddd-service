{
  "name": "crud-json",
  "version": "1.0.0",
  "description": "CRUD NodeJS with TyeORM(Postgresql) using clean architecture and DDD (Domain driven design)",
  "main": "index.js",
  "author": "Edgar Castillo Vega",
  "license": "ISC",
  "scripts": {
    "start": "nodemon src/index.ts --exec ts-node",
    "test": "echo \"Error: no test specified\" && exit 1",
    "setup": "docker-compose up -d",
    "typeorm": "ts-node $(yarn bin typeorm) -d src/shared/infrastructure/database/postgresql/postgres.database.ts",
    "db:migrate": "yarn typeorm migration:run",
    "db:migrate:revert": "yarn typeorm migration:revert",
    "db:migration:generate": "yarn typeorm migration:generate"
  },
  "keywords": [
    "typescript",
    "clean",
    "architecture",
    "DDD",
    "TDD",
    "redis",
    "typeorm",
    "postgres"
  ],
  "dependencies": {
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "express": "^4.17.2",
    "pg": "^8.4.0",
    "redis": "^4.3.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.3.10"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/node": "^16.11.10",
    "@types/redis": "^4.0.11",
    "nodemon": "^2.0.20",
    "ts-node": "10.7.0",
    "typescript": "4.5.2"
  }
}
